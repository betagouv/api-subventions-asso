{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "types": ["reflect-metadata", "jest"],
        "paths": {
            "~": ["./src"]
        },
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "exclude": [
        "tests",
        "jest.config.ts",
        "jest.config.integ.ts",
        "jest.setup.after.env.ts"
    ]
}