{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "types": ["reflect-metadata", "jest", "node"],
        "paths": {
            "~": ["./src"]
        },
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
