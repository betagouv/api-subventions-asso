{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "types": ["reflect-metadata"],
        "rootDir": "./",
        "outDir": "build",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["src/**/*", "svelte/**/*", "views/**/*", "static/**/*"],
    "exclude": ["node_modules", "jest.config.js", "jest.config.unit.js"]
}
