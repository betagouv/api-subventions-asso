<li>
    <section class="fr-accordion">
        <h3 class="fr-accordion__title">
            <button class="fr-accordion__btn" aria-expanded="true" aria-controls="fr-accordion-1<%- index %>2-body-1<%- index %>2">Montant total</button>
        </h3>
        <div class="fr-collapse" id="fr-accordion-1<%- index %>2-body-1<%- index %>2">
            <div class="fr-grid-row fr-grid-row--left fr-grid-row--gutters">
                <div class="fr-col fr-col-lg-6"">
                    <div class="fr-table">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col">Service Instructeur</th>
                                    <th scope="col">Demandé</th>
                                    <th scope="col">Proposé</th>
                                    <th scope="col">Accordé</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                    let currentSubventions = subventions.byYear[year];
                                    const requestStatus = Object.keys(currentSubventions);
                                    const addStatusAndServiceName = function(status) {
                                        const subventionsByStatus = currentSubventions[status];
                                        return Object.keys(subventionsByStatus).map(name => ({ ...subventionsByStatus[name], status: status, serviceName: name }));
                                    }
                                    currentSubventionsWithStatusAndName = requestStatus.map(addStatusAndServiceName).flat();
                                %>
                                <% for (let subventionIndex = 0; subventionIndex < currentSubventionsWithStatusAndName.length; subventionIndex++) { %>
                                    <% const subvention = currentSubventionsWithStatusAndName[subventionIndex] %>
                                    <tr>
                                        <td><%- subvention.serviceName %></td>
                                        <td><%- subvention.demande %></td>
                                        <td><%- subvention.propose %></td>
                                        <td><%- subvention.accorde %></td>
                                        <td><%- subvention.status %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</li>
