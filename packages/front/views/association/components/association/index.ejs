<li>
    <section class="fr-accordion">
        <h3 class="fr-accordion__title">
            <button class="fr-accordion__btn" aria-expanded="true" aria-controls="fr-accordion-0-body-0">Informations administratives</button>
        </h3>
        <div class="fr-collapse" id="fr-accordion-0-body-0">
            <% if (helper.hasValue(association.denomination_rna || association.denomination_siren)) { %>
                <h4><%- helper.getValue(association.denomination_rna || association.denomination_siren) -%> </h4>
            <% } %>
            <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
                <div class="fr-col fr-col-lg-6">
                        <p>RNA : <%- helper.returnValueOrHyphen(helper.getValue(association.rna))-%>  </p>
                        <p>SIREN : <%- helper.returnValueOrHyphen(helper.getValue(association.siren))-%> </p>
                        <p>SIRET du siège : <%- helper.returnValueOrHyphen(helper.getValue(association.siren))-%><%- helper.returnValueOrHyphen(helper.getValue(association.nic_siege))-%></p>
                </div>
                <div class="fr-col fr-col-lg-6">
                        <p>Adresse du siège : <%- helper.returnValueOrHyphen(helper.adresse.toString(association.adresse_siege))-%> </p>
                        <p>Date d'immatriculation : <%- helper.returnValueOrHyphen(helper.date.toProviderValueString(association.date_creation))-%> </p>
                        <p>Dernière modification au greffe : <%- helper.returnValueOrHyphen(helper.date.toProviderValueString(association.date_modification))-%> </p>
                </div>
            </div>

            <div class="fr-grid-row fr-grid-row--left fr-grid-row--gutters">
                <div class="fr-col fr-col-lg-12">
                    <h6>Objet social</h6>
                    <p>Code objet social : <%- helper.returnValueOrHyphen(helper.getValue(association.code_objet_social_1))-%></p>
                    <p><%- helper.returnValueOrHyphen(helper.capitalizeFirstLetter(helper.getValue(association.objet_social)))-%></p>
                </div>
            </div>
            <h6>Autres</h6>
            <div class="fr-grid-row fr-grid-row--left fr-grid-row--gutters">

                <div class="fr-col fr-col-lg-6">
                    <% if (helper.hasValue(association.nic_siege) && helper.hasValue(association.siren)) { %>
                        <%- include('../../../global_components/tile',
                        {
                            title: 'Télécharger l\'avis de situation',
                            desc: "Télécharger l\'avis de situation du siège",
                            url: 'https://api.avis-situation-sirene.insee.fr/identification/pdf/' + helper.getValue(association.siren) + helper.getValue(association.nic_siege),
                            img: '/static/images/logo_insee.jpg',
                            download: "Avis_de_situation_au_répertoire_Sirene-"+ helper.getValue(association.siren) +".pdf",
                            target: "_blank"
                        })
                        -%>
                    <% } %>
                </div>
                <div class="fr-col fr-col-lg-6">
                    <%- include('../../../global_components/tile',
                    {
                        title: 'Télécharger les données brutes',
                        desc: "Télécharger les données disponibles au format JSON",
                        url: '/download/json/association/' + helper.getValue(association.rna),
                        img: '/static/images/json.png',
                        download: "association-"+ helper.getValue(association.rna) +".json"
                    })
                    -%>
                </div>
            </div>
        </div>
    </section>
</li>
