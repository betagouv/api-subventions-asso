<%- include('../header') -%>
<main role="main" id="contenu">
    <div class="fr-container fr-mb-8w">
        <%- include('../global_components/ariane', { items: [
            { label: 'Accueil', url: '/' },
            { label: 'Association' },
            ],})
            -%>
            <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
                <div class="fr-col fr-col-xl-12">
                    <ul class="fr-accordions-group">
                        <%- include('./components/association/index', {
                            association: association,
                        })
                        -%>
                        <li>
                            <section class="fr-accordion">
                                <h3 class="fr-accordion__title">
                                    <button class="fr-accordion__btn" aria-expanded="false" aria-controls="fr-accordion-1-body-1">Ã‰tablissements</button>
                                </h3>
                                <div class="fr-collapse" id="fr-accordion-1-body-1">
                                    <div class="fr-grid-row fr-grid-row--gutters">
                                        <% for( let index = 0; index < association.etablissements.length; index++ ) { %>
                                            <%- include('./components/card_etablissement',
                                            {
                                                association: association,
                                                etablissement: association.etablissements[index] 
                                            })
                                            -%>
                                        <% } %>
                                    </div>
                                </div>
                            </section>
                        </li>

                        <%-
                            include("../global_components/demandes_subventions/index", {
                                subventions
                            });
                        -%>

                        <% if(versements) { %>
                            <%-
                                include("../global_components/versements/index", {
                                    versements,
                                    currentSiret: null
                                });
                            -%>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('../footer') -%>